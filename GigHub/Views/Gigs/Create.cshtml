@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "title";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a gig</h2>

@using (Html.BeginForm("Create", "Gigs"))
{
    <p class="alert alert-info">All fields are <strong>required</strong></p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Venue, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date, new { @class = "control-label" } )
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeHolder = "25/12/2016", autofocus="autoFocus" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeHolder = "20:00" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control", style = "padding: 3px 15px"})
        @Html.ValidationMessageFor(m => m.Genre)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
