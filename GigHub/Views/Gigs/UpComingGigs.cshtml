@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upcoming gigs</h2>

<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">@gig.DateTime.ToString("MMM")</div>
                <div class="day">@gig.DateTime.ToString("d ")</div>
                <div class="details">
                    <span class="artist">
                        @gig.Artist.Name
                        <button type="submit" class="btn btn-link btn-sm js-toggle-follow">Follow</button>

                    </span>
                    <span class="venue">
                        @gig.Venue
                        <button data-gig-id="@gig.Id" type="submit" class="btn btn-default btn-sm js-attending-gig pull-right">Going?</button>
                    </span>
                    </div>
            </div>
        </li>
    }
</ul>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function() {
            $(".js-attending-gig").click(function(e) {
                var btn = $(e.target);
                $.post("/api/attendances", { "": btn.attr("data-gig-id") })
                    .done(function() {
                        btn.removeClass("btn-default")
                            .addClass("btn-primary")
                            .text("Going");
                    })
                    .fail(function() {
                        alert("Already attending!!!");
                    });
            });
        });
    </script>
}